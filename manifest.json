{
	"manifest_version": 2,
	"name": "CambridgeDict",
	"version": "1.0.0",
	"description": "Search a word or a sentence on Cambridge Dictionary.",

	"icons": {
		"128": "icons/icon128.png",
		"48": "icons/icon48.png",
		"16": "icons/icon16.png"
	},

	"browser_action": {
		"default_icon": "icons/icon16.png",
		"default_popup": "src/popup.html"
	},

	"background": {
		"scripts": ["src/eventPage.js"],
		"persistent": false
	},

	"permissions": [
		"tabs",
		"contextMenus"
	]
}
